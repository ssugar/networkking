extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.firstname}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username: #{user.username}
								li Email: #{user.email}
								li First Name: #{user.firstname} 
								li Last Name: #{user.lastname}
								li Industry: #{user.industry}
								li Title: #{user.title}
								li Latitude: #{user.latitude}
								li Longitude: #{user.longitude}
								li Gender: #{user.gender}
						a(href='/signout', class='text-center new-account') Sign Out
					h1.text-center.login-title Here are the other networkers:
					each person in users
						div.signup-wall
							ul.user-details
								li #{person.lastname}, #{person.firstname}
								li #{person.title}
								li #{person.industry}
								li #{person.latitude}
								li #{person.longitude}

